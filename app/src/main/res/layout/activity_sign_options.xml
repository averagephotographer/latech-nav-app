<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D74B8"
    tools:context=".SignOptionsActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="400dp"
        android:layout_height="1000dp"
        android:layout_marginBottom="83dp"
        android:foreground="@drawable/secondary_background"
        android:src="@drawable/secondary_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_up"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/red"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableTint="@color/white"
        android:paddingStart="50dp"
        android:paddingEnd="45dp"
        android:text="@string/Sign_Up"
        android:textColor="@color/white"
        app:cornerRadius="24dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_inwithtwitter"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#1D9BF0"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableTint="@color/white"
        android:paddingStart="50dp"
        android:paddingEnd="45dp"
        android:text="Sign up With Twitter"
        android:textColor="@color/white"
        app:cornerRadius="24dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_in"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableTint="@color/white"
        android:text="@string/Sign_in"
        android:textColor="@color/white"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>